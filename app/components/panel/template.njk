<div class="{%- if params.classes %} {{ params.classes }}{% else %}app-contact-panel{% endif %}">
  <h{{ params.headingLevel | default(2) }} class="{%- if params.titleClasses %} {{ params.titleClasses }}{% else %}app-contact-panel__heading{% endif %}">
    {{ params.titleHtml | safe if params.titleHtml else params.titleText }}
  </h{{ params.headingLevel | default(2) }}>

  {%- if params.html or params.text %}
	<p class="app-contact-panel__body">
		{{ params.html | safe if params.html else params.text }}
	</p>
	{% endif -%}
</div>